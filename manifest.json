{
    "manifest_version": 2,
    "name": "Privacy Permission Dashboard",
    "version": "1.0",
    "description": "Monitor and control website permissions for each open tab",
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "browserSettings",
        "privacy",
        "webNavigation",
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": {
            "19": "icons/icon-19.png",
            "38": "icons/icon-38.png"
        },
        "default_title": "Privacy Permission Dashboard",
        "default_popup": "popup/dashboard.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}